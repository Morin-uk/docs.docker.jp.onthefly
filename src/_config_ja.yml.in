name: Docker ドキュメント
lang: ja_JP
url:      "__URL__"
baseurl:  "__BASEURL__"
destination: "__SITEDESTDIR__"

defaults:
  - scope:
      path: ""
      type: "pages"
    values:
      layout: docs
      toc_min: 2
      toc_max: 3
      tree: true

  - scope:
      path: glossary
    values:
      edit_url: "https://github.com/matsuand/docs.docker.jp.onthefly/blob/master/src/_data/glossary.yaml"

  # Hide Enterprise content from sitemap. These directories still contains stubs
  # that are needed to redirect old URLs
  - scope:
      path: "datacenter"
    values:
      hide_from_sitemap: true
      title: Docker Enterprise は Mirantis に移転しました。
  - scope:
      path: "ee"
    values:
      hide_from_sitemap: true
      title: Docker Enterprise は Mirantis に移転しました。
